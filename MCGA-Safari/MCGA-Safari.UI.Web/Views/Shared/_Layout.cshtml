<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Safari</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" type="text/css" />

    <meta name="description" content="@ViewBag.Description">
    @* Author - (Optional) Used by search engines. The author of the page. *@
    @if (ViewBag.Author != null)
    {
        <meta name="author" content="@ViewBag.Author">
    }


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Safari", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Home/Dashboard">Dashboard</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">Servicios<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Room/">Consultorios</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/ServiceType/"">Tipos de servicio</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/Doctor/">Doctores</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/Specie/">Especies</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/Client/">Clientes</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="/Patient/">Pacientes</a>
                            </li>
                        </ul>
                    </li>
                    <li><a href="/Appointment/">Turnos</a></li>
                    <li><a href="/Appointment/Calendar/">Calendario</a></li>
                    <li><a href="/Home/Contact">Contacto</a></li>
                    <li><a href="/Home/About">Nosotros</a></li>
                </ul>
                @Html.Partial("_MenuPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @*<div class="container body-content">
            @RenderBody()
            <hr />
        </div>*@

    <section class="content container body-content">
        @RenderBody()
    </section>

    <aside>
        @RenderSection("Aside", false)
    </aside>

    <footer class="page-footer font-small blue pt-4">
        <div class="container-fluid text-center text-md-left">
            <div class="row">
                <div class="col-md-3 mt-md-0 mt-3">
                    <a href="" target="_self">
                        <div class="title">Nosotros</div>
                    </a>
                </div>
                <div class="col-md-3 mt-md-0 mt-3">
                    <div class="title">Ventas y consultas</div>
                    <div class="informacion">
                        <p>Atención telefónica:</p>
                        <p>0810-220-2345</p>
                        <p>Lunes a Viernes de 9 a 20 hs</p>
                        <p>Sábados de 9 a 13 hs</p>
                        <p>Feriados de 10 a 15 hs</p>
                    </div>
                </div>
                <div class="col-md-3 mt-md-0 mt-3">
                    <div class="title">Redes Sociales</div>
                    <div class="informacion">
                        <a href="" target="_blank">
                            <img src="~/Images/facebook.png">
                        </a>
                        <a href="" target="_blank">
                            <img src="~/Images/youtube.png" />
                        </a>
                        <a href="" target="_blank">
                            <img src="~/Images/instagram.png" />
                        </a>
                    </div>
                </div>
                <div class="col-md-3 mt-md-0 mt-3">
                    <a href="" target="_self">
                        <div class="title">Sucursales</div>
                    </a>
                </div>
            </div>
        </div>
        <div class="footer-copyright text-center py-3">
            © 2018 Copyright - @DateTime.Now.Year - Safari
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
