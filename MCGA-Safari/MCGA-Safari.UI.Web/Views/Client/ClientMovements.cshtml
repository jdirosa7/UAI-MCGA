@model IEnumerable<MCGA_Safari.Entities.Movement>

@{
    ViewBag.Title = "Index";
}

<h2>Historial de movimientos de @ViewBag.Cliente.Name @ViewBag.Cliente.LastName</h2>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovementType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
        </tr>
    }

</table>

@if (Model.Count() == 0)
{
    <p>No se encontraron movimientos</p>
}

<br />

<div>
    <input type="button" value="Volver" onclick="btnBack()" class="btn btn-back" />
</div>
<br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


    <script>

        function btnBack() {

            window.location.href = '/Client/Index/';
        }

    </script>
}

<style>

    p{
        text-align: center;
    }

    .btn-back {
        color: #fff;
        background-color: #0DAFB4;
        border-color: #0DAFB4;
    }

    .btn-back:hover {
        background-color: #0A969A;
        border-color: #0A969A;
    }
</style>